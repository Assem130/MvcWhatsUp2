@using MvcWhatsUP.Models
@model User
@{
    ViewData["Title"] = "Delete User";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4 border-danger">
                <h2 class="text-center text-danger mb-4">Delete User</h2>
                <p class="text-center">Are you sure you want to delete this user?</p>
                <form asp-action="SoftDelete" method="post">
                    <!-- Hidden User ID -->
                    <input type="hidden" asp-for="UserId" />
                    <!-- Name (Read-only) -->
                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label">Full Name</label>
                        <input asp-for="UserName" class="form-control" readonly />
                    </div>
                    <!-- Email (Read-only) -->
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email Address</label>
                        <input asp-for="Email" type="email" class="form-control" readonly />
                    </div>
                    <!-- Phone Number (Read-only) -->
                    <div class="mb-3">
                        <label asp-for="MobileNumber" class="form-label">Phone Number</label>
                        <input asp-for="MobileNumber" type="tel" class="form-control" readonly />
                    </div>
                    <!-- Delete Button -->
                    <div class="d-grid">
                        <button type="submit" class="btn btn-danger btn-lg">Confirm Delete</button>
                    </div>
                </form>
                <!-- Back Button -->
                <div class="text-center mt-3">
                    <a href="/Users/Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>